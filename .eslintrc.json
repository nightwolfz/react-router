{
  "root": true,
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": [1, { "pragma": "Inferno" }],
      "globalReturn ": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "__DEV__": true,
    "Inferno": true
  },
  "rules": {
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2
  },
  "plugins": [
    "react"
  ]
}
